<section>
    <div class="section-header">
        <h1>Profile</h1>
    </div>

    <div class="profile-container">
        <div class="profile-wrapper profile">
            <div class="card">
                <h2>Profile detail</h2>
                <div class="image-container" style="background-image: url({{@model.image}});"></div>
                <h2>{{@model.firstname}} {{@model.lastname}}</h2>
                <h3><FaIcon @icon="map-marker-alt" />{{@model.city}}</h3>
                <h2>About me</h2>
                <p>{{@model.bio}}</p>
            </div>
        </div>
        <div class="profile-wrapper details">
            <div class="card">
                <Chart />
            </div>
        </div>
    </div>
</section>