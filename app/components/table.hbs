<div class="table-container">
    <h3>Leaderboard</h3>
    <table>
        <thead>
            <tr>
                <td>Teams</td>
                <td>Week 1</td>
                <td>Week 2</td>
                <td>Week 3</td>
                <td>Week 4</td>
                <td>Week 5</td>
                <td>Team Total</td>
                <td>Group Total</td>
            </tr>
        </thead>
        <tbody>
            {{#each @table as |team index|}}
                <tr>
                    <td>{{team.name}}</td>
                    {{#each team.scores as |score|}}
                    <td>{{score}}</td>
                    {{/each}}      
                    <td>555</td>
                    {{#unless index}}
                    <td rowspan="6">3886</td>
                    {{/unless}} 
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>