<div class="table-container">
    <h3>{{@team.name}}</h3>
    <table>
        <thead>
            <tr>
                <th>Teams</th>
                <th>Week 1</th>
                <th>Week 2</th>
                <th>Week 3</th>
                <th>Week 4</th>
                <th>Week 5</th>
                <th>Team Total</th>
                <th>Group Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each  @team.user as |user index|}}
                <tr>               
                    <td>{{user.firstname}} {{user.lastname}}</td>
                    {{#each user.scores as |score|}}
                    <td>{{score}}</td>
                    {{/each}}
                    <td>557</td>
                    {{#unless index}}
                    <td rowspan="6">781</td>
                    {{/unless}}
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>