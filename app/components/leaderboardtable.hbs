<div class="table-container">
    <h3>Leaderboard</h3>
    <table>
        <thead>
            <tr>
                <th>Teams</th>
                <th>Week 1</th>
                <th>Week 2</th>
                <th>Week 3</th>
                <th>Week 4</th>
                <th>Week 5</th>
                <th>Team Total</th>
                <th>Group Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each @table as |team index|}}
                <tr>
                    <td>{{team.name}}</td>
                    {{#each team.scores as |score|}}
                    <td>{{score}}</td>
                    {{/each}}      
                    <td>555</td>
                    {{#unless index}}
                    <td rowspan="6">3886</td>
                    {{/unless}} 
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>